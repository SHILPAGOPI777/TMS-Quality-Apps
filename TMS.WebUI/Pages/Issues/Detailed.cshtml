@page
@model TMS.WebUI.Issues.DetailedModel
@{
    ViewData["Title"] = "Issue Details";
}

<style>
    body {
        background-color: #cdcdcd;
        color: white;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .breadcrumbs {
        font-size: 1rem;
    }

        .breadcrumbs a {
            color: #004875;
            text-decoration: none;
        }

            .breadcrumbs a:hover {
                text-decoration: underline;
            }

        .breadcrumbs span {
            color: #0165c9;
        }



    .btn:hover {
        background-color: #004d99;
    }

    h1 {
        font-size: 2rem;
        font-weight: bold;
    }

    .details-container {
        width: 90%;
        margin: 20px auto;
        padding: 20px;
        background-color: #001f4d;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        color:white;
    }

        .table th, .table td {
            border: 1px solid #b7c1cb;
            padding: 15px;
            text-align: left;
        }

        .table th {
            background-color: #004080;
            color: white;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

    .btn {
        display: inline-block;
        background-color: #0066cc;
        color: white;
        text-decoration: none;
        padding: 5px 20px;
        border-radius: 5px;
        font-size: 1rem;
        transition: background-color 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        border: none;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #004d99;
        }

    .info-header {
        font-size: 1.2rem;
        font-weight: bold;
        margin-bottom: 10px;
    }
</style>

<div class="breadcrumbs">
    <a asp-page="../Index">Home</a> >
    <a asp-page="Index">Issues</a> >
    <span>Issue Details</span>
</div>

<div class="details-container">
    <h1>Issue# @Model.Issue.Id</h1>
    <div class="info-header">Details:</div>
    <table class="table">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Assignee</th>
            <th>Reporter</th>
        </tr>
        <tr>
            <td>@Model.Issue.Name</td>
            <td>@Model.Issue.Description</td>
            <td class="task-priority">@Model.Issue.Priority</td>
            <td class="task-status">@Model.Issue.Status</td>
            <td>@Model.Issue.AssigneeName</td>
            <td>@Model.Issue.ReporterName</td>
        </tr>
    </table>

    <a class="btn task-edit" asp-page="Edit" asp-route-id="@Model.Issue.Id">Edit Issue</a>
</div>
